<resources>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light">
        <item name="ate_key">light_theme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorLightPrimaryDefault</item>
        <item name="colorPrimaryDark">@color/colorLightPrimaryDarkDefault</item>
        <item name="colorAccent">@color/colorAccentLightDefault</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="ate_key">light_theme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorLightPrimaryDefault</item>
        <item name="colorPrimaryDark">@color/colorLightPrimaryDarkDefault</item>
        <item name="colorAccent">@color/colorAccentLightDefault</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppThemeDark.ActionBar" parent="Theme.AppCompat">
        <item name="ate_key">dark_theme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorDarkPrimaryDefault</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDarkDefault</item>
        <item name="colorAccent">@color/colorDarkAccentDefault</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="ate_key">dark_theme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorDarkPrimaryDefault</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDarkDefault</item>
        <item name="colorAccent">@color/colorDarkAccentDefault</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat</item>
    </style>

    <style name="AppTheme.NoTranslucent">
        <item name="ate_key">light_theme</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme.Translucent">
        <item name="ate_key">light_theme</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppThemeDark.NoTranslucent">
        <item name="ate_key">dark_theme</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat</item>
    </style>

    <style name="AppThemeDark.Translucent">
        <item name="ate_key">dark_theme</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="toolbar_popup_theme">@style/ThemeOverlay.AppCompat</item>
    </style>

</resources>
